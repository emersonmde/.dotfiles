[user]
	email = emersonmde@protonmail.com
	name = Matthew Emerson

[alias]
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit


[pull]
	rebase = true

[init]
	defaultBranch = main

[rerere]
	enabled = true

[diff]
	algorithm = histogram

[url "git@github.com:"]
	insteadOf = "https://github.com/"

[transfer]
	fsckobjects = true

[fetch]
	fsckobjects = true

[receive]
	fsckObjects = true

[branch]
	sort = -committerdate

[tag]
	sort = taggerdate

[log]
	date = iso

[include]
	path = "~/.work-gitconfig"

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f
